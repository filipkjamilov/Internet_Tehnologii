@model IEnumerable<PhoneApp.Models.Phone>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .img-responsive {
    width: auto;
    height: 250px;
}
    .center-block {
    display: block;
    margin-left: auto;
    margin-right: auto;
 }
    .inline{
        display:inline
    }
    
    .btn-danger{
         margin:5px;
         
    }
    .myLabel{
        font-size:17px;
        color:rgb(46,151,173,0.9);
        border:2px solid rgb(46,151,173,0.9);
        border-radius:7px;
        padding:5px;
        margin:5px;
    }
    .br{
        border-radius:9px;
    }
    .buttoncolor{
        color:rgb(46,151,173,0.9);
    }
    div.row a{
        color:white;
         background-color:rgb(46,151,173,0.9);
         border:none;
    }
    .tales {
  width: 100%;
}
.carousel-inner{
  width:100%;
  max-height: 600px !important;
}

</style>


    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top:45px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Scripts/images/i1.jpg" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Scripts/images/i2.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Scripts/images/i3.jpg" alt="New york" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 col-xs-12 text-center ">
            <div style="width:100%; margin-top:20px; background: rgba(255, 255, 255, 0.6)" class="table-bordered br">
                <div class="myLabel" style="">
                    <label class="text-info">@item.manufacturer.name</label>
                    -
                    <label class="text-info">@item.name</label>
                </div>
                
                <div class="text-center ">
                    <img src="@item.img" class="img-responsive inline " />
                </div>
                <label class="myLabel">Price: @item.price &euro;</label> <br />

                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-danger " })
            </div>

        </div>

    }

 

</div>

